<main id="manage-container" class="flex justify-center w-full p-4 relative">
  <div class="w-full max-w-6xl">
    <% if (typeof success !== 'undefined' && success) { %>
    <div
      id="alert-notification"
      class="flex items-center w-full gap-4 px-4 py-3 text-sm border rounded border-emerald-100 bg-emerald-50 text-emerald-600"
      role="alert"
    >
      <i class="fa-regular fa-circle-check"></i>
      <p><%= success %></p>
      <i id="close-alert" class="fa-solid fa-xmark ml-auto cursor-pointer"></i>
    </div>
    <% } %> <%- include("../../partials/dashboard/deleteModal.ejs") %>

    <h1 class="py-6 text-2xl font-bold text-center">Manage your articles.</h1>
    <p>Total Article: <%= posts.length %></p>
    <div class="w-full overflow-x-auto p-4">
      <table
        class="w-full text-left border border-collapse rounded sm:border-separate border-slate-200"
        cellspacing="0"
      >
        <tbody>
          <tr>
            <th
              scope="col"
              class="h-12 px-6 text-sm font-medium border-l first:border-l-0 stroke-slate-700 text-slate-700 bg-slate-100"
            >
              Created At
            </th>
            <th
              scope="col"
              class="h-12 px-6 text-sm font-medium border-l first:border-l-0 stroke-slate-700 text-slate-700 bg-slate-100"
            >
              Title
            </th>
            <th
              scope="col"
              class="h-12 px-6 text-sm font-medium border-l first:border-l-0 stroke-slate-700 text-slate-700 bg-slate-100"
            >
              Category
            </th>
            <th
              scope="col"
              class="h-12 px-6 text-sm font-medium border-l first:border-l-0 stroke-slate-700 text-slate-700 bg-slate-100"
            >
              Action
            </th>
          </tr>
          <% posts.forEach(post => { %>
          <tr class="hover:bg-gray-50">
            <td
              class="h-12 px-6 text-sm transition duration-300 border-t border-l first:border-l-0 border-slate-200 stroke-slate-500 text-black"
            >
              <span><%= formatDate(post.createdAt) %></span>
            </td>
            <td
              class="h-12 px-6 text-sm transition duration-300 border-t border-l first:border-l-0 border-slate-200 stroke-slate-500 text-black"
            >
              <% if (post.draft) { %>
              <span
                class="px-2 py-1 rounded-lg bg-rose-100 border border-rose-400 text-xs"
                >Draft</span
              >
              <% } %>
              <span><%= post.title %></span>
              <a href="/<%= post.slug %>" target="_blank"
                ><i
                  class="fa-solid fa-arrow-up-right-from-square hover:text-green-700 transition-colors"
                ></i
              ></a>
            </td>
            <td
              class="h-12 px-6 text-sm transition duration-300 border-t border-l first:border-l-0 border-slate-200 stroke-slate-500 text-black"
            >
              <%= post.category.name %>
            </td>
            <td
              class="h-12 px-6 text-sm transition duration-300 border-t border-l first:border-l-0 border-slate-200 stroke-slate-500 text-black"
            >
              <div class="flex items-center gap-2">
                <a
                  href="/edit/<%= post.postId %>"
                  class="px-2 py-1 rounded bg-green-100 border border-green-500 transition-colors hover:bg-green-200 hover:border-green-600"
                  >Edit</a
                >
                <button
                  data-id="<%= post.postId %>"
                  type="submit"
                  class="toggle-modal px-2 py-1 rounded bg-red-100 border border-red-500 transition-colors hover:bg-red-200 hover:border-red-600"
                >
                  Delete
                </button>
              </div>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</main>

<script src="/scripts/manage.js"></script>
