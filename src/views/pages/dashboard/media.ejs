<main class="p-4 lg:max-w-[calc(100vw-19rem)]">
  <% if (typeof success !== 'undefined' && success) { %>
  <div
    id="alert-notification"
    class="flex items-center w-full gap-4 px-4 py-3 text-sm border rounded border-emerald-100 bg-emerald-50 text-emerald-600"
    role="alert"
  >
    <i class="fa-regular fa-circle-check"></i>
    <p><%= success %></p>
    <i id="close-alert" class="fa-solid fa-xmark ml-auto cursor-pointer"></i>
  </div>
  <% } %>

  <h1 class="py-6 text-2xl font-bold text-center border-b border-b-gray-200">
    Manage your media and files.
  </h1>

  <div>
    <h2 class="mt-4 text-xl">
      Blog Thumbnails
      <span class="text-sm text-red-500"> *horizontal scroll</span>
    </h2>
    <div class="flex items-center gap-4 overflow-auto p-4 hide-scrollbar">
      <% thumbnails.forEach(post => { %>
      <div
        class="overflow-hidden bg-white rounded shadow-md text-slate-500 shadow-slate-200 min-w-72 max-w-72"
      >
        <figure class="relative">
          <img
            loading="lazy"
            src="<%= post.thumbnail %>"
            alt="card image"
            class="aspect-video w-full"
          />
          <figcaption
            class="absolute bottom-0 left-0 w-full p-6 text-white bg-gradient-to-t from-slate-900"
          >
            <h3 class="text-lg font-medium"><%= post.title %></h3>
            <p class="text-sm opacity-75"><%= formatDate(post.createdAt) %></p>
          </figcaption>
          <div class="absolute top-4 right-4 flex items-center gap-2">
            <a
              href="<%= post.thumbnail %>"
              target="_blank"
              class="cursor-pointer"
            >
              <i
                class="fa-solid fa-arrow-up-right-from-square bg-white rounded-full shadow p-2"
              >
              </i>
            </a>
          </div>
        </figure>
      </div>
      <% }) %>
    </div>
  </div>

  <div>
    <h2 class="py-4 text-xl">Media & Files in Blog Content</h2>

    <div>
      <div class="container m-auto">
        <div class="grid grid-cols-4 gap-4 md:grid-cols-8 lg:grid-cols-12">
          <% images.forEach(image => { %>
          <div
            class="col-span-4 overflow-hidden bg-white rounded shadow-md text-slate-500 shadow-slate-200 w-full max-w-[24rem]"
          >
            <figure class="relative">
              <img
                loading="lazy"
                src="<%= image.fileName %>"
                alt="card image"
                class="aspect-auto w-full object-cover object-center"
              />
              <figcaption
                class="absolute bottom-0 left-0 w-full p-6 text-white bg-gradient-to-t from-slate-900"
              >
                <h3 class="text-lg font-medium"><%= image.imageId %></h3>
              </figcaption>
              <div class="absolute top-4 right-4 flex items-center gap-2">
                <a
                  href="<%= image.fileName %>"
                  target="_blank"
                  class="cursor-pointer"
                >
                  <i
                    class="fa-solid fa-arrow-up-right-from-square bg-white rounded-full shadow p-2"
                  >
                  </i>
                </a>
                <form action="/media/delete/<%= image.imageId %>" method="post">
                  <button type="submit">
                    <i
                      class="fa-solid fa-trash text-white rounded-full shadow p-2 bg-rose-600"
                    >
                    </i>
                  </button>
                </form>
              </div>
            </figure>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </div>
</main>
